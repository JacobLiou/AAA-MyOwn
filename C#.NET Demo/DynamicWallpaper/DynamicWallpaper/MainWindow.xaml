<Window x:Class="DynamicWallpaper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DynamicWallpaper"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <MediaElement Grid.Column="0" x:Name="Media"></MediaElement>
        <StackPanel Grid.Column="1">
            <Button Width="135" Click="Button_Click" Margin="5">选择视频</Button>
            <Button x:Name="SetBackgroundBtn" Click="SetBackgroundBtn_Click" Margin="5">设置背景</Button>
        </StackPanel>
    </Grid>
</Window>
